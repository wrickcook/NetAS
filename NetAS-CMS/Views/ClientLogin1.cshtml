@inherits Umbraco.Web.Mvc.UmbracoViewPage<LoginModel>
@using Umbraco.Web;
@using Umbraco.Web.Models

@{
    Layout = "Master.cshtml";
}

<div class="container">
    <div class="form-container padding-bottom-50">
        <div class="form-content login-form">
            @{
                if (!Umbraco.MemberIsLoggedOn())
                {
                    using (Html.BeginUmbracoForm("SubmitLogin", "Client", System.Web.Mvc.FormMethod.Post, new { id = "login" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { placeholder = "UserName" })

                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                    }
                }
            }
        </div>
    </div>
</div>